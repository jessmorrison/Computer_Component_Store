@model IEnumerable<Computer_Component_Store.Data.ComputerComponentProduct>

@{
    ViewData["Title"] = "CasualFeaturedBuild";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom:3rem;">
    <div class="carousel-inner">
        <div class="carousel-item active">

            <img src="~/images/banner/banner_2.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="carousel-h1">Casual</p>
                <span class="carousel-subheader" style="background-color:#9b333f; color:#e8e8e8;">Hardcore Build For Hardcore Gamer.</span>
            </div>

        </div>
    </div>
</div>


