        if (Plebpicker.style.display === "none" || Hardcorepicker.style.display === "block" || Casualpicker.style.display === "block") {
            Hardcorepicker.style.display = "none";
            Casualpicker.style.display = "none";
            Plebpicker.style.display = "block";
            Hardcore.style.backgroundColor = "#1c1c1c";
            Hardcore.style.color = "#9b333f";
            Casual.style.backgroundColor = "#1c1c1c";
            Casual.style.color = "#9b333f";
            Pleb.style.backgroundColor = "#9b333f";
            Pleb.style.color = "#e8e8e8";
        }
        else {
            Plebpicker.style.display = "none";
            Pleb.style.backgroundColor = "#1c1c1c";
            Pleb.style.color = "#9b333f";
        }
    }
    function setCaseValuePleb(e) {
        document.getElementById("CaseIDPleb").value = e.target.value;
