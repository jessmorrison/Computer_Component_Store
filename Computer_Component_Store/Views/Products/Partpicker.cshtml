            Hardcore.style.color = "#E8E8E8";
            Casual.style.backgroundColor = "#1c1c1c";
            Casual.style.color = "#9b333f";
            Pleb.style.backgroundColor = "#1c1c1c";
            Pleb.style.color = "#9b333f";
        }
