@model IEnumerable<Computer_Component_Store.Data.ComputerComponentProduct>
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="carousel-h1">HARDCORE</p>
                <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                    This PC Is Only For The Most Hardcore Of Consumers 
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner1.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="carousel-h1">Casual</p>
                <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                    This PC Is For Casual Consumers
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner1.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p class="carousel-h1">
                    Pleb
                </p>
                <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                    A Pleb PC for Plebs
                </a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div id="homepage-divider"></div>
<div class="row">
    <div class="col-sm">
    <h1><a href="/products/Motherboards">Motherboards</a></h1>
        @foreach (var product in Model.Where(x => x.Category == "MOTHERBOARD" && x.ID == 1))
        {
            <div class="card" id="homeCard">
                <div class="card-body">
                    <h2><a href="/products/index/@product.ID">@product.Name</a></h2>
                    <a href="/products/index/@product.ID"><img class="img-fluid" src="@Url.Content(product.ImageURL)" /></a>
                    <p>@product.Description</p>
                    <form method="post" asp-action="index">
                        <input type="hidden" name="id" value="@product.ID" />
                        <label for="quantity">How many would you like?</label>
                        <select name="quantity" class="form-control">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <input type="submit" class="btn btn-primary" value="Add To Cart" />
                    </form>

                </div>
            </div>
        }
     </div>

    <div class="col-sm">
        <h1><a href="/products/VideoCards">Video Cards</a></h1>
