                            }
                        </select>
                        <input type="submit" class="btn btn-primary" value="Add To Cart" />
                    </form>

                </div>
            </div>
        }
    </div>
    <div class="col-sm">
        <h2><a href="/products/CoolingSystems">Cooling Systems</a></h2>
        @foreach (var product in Model.Where(x => x.Category == "VIDEOCARD" && x.CompatibilityType == "S"))
