@model IEnumerable<Computer_Component_Store.Data.ComputerComponentProduct>
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a class="btn btn-default" asp-controller="Products" asp-action="HardcoreFeaturedBuild">
                <img src="~/images/banner/banner_1.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p class="carousel-h1">HARDCORE</p>
                    <span class="carousel-subheader">Hardcore Build For Hardcore Gamer.</span>
                </div>
            </a>
        </div>
        
        <div class="carousel-item">
            <a class="btn btn-default" asp-controller="Products" asp-action="CasualFeaturedBuild">
                <img src="~/images/banner/banner_2.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p class="carousel-h1">Casual</p>
                    <span class="carousel-subheader">This PC Is For Casual Consumers</span>
                </div>
            </a>
        </div>
        <div class="carousel-item">
            <a class="btn btn-default" asp-controller="Products" asp-action="PlebFeaturedBuild">
                <img src="~/images/banner/banner_3.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p class="carousel-h1">Pleb</p>
                        <span class="carousel-subheader">A Pleb PC for Plebs</span>
                </div>
            </a>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div id="homepage-divider"></div>
<h1 style="text-align: center;">FEATURED HARDCORE ITEMS</h1>
<div class="row">
    <div class="col-sm">
        <h2><a href="/products/Motherboards">Motherboards</a></h2>
        @foreach (var product in Model.Where(x => x.Category == "CASE" && x.CompatibilityType == "S"))
        {
            <div class="card" id="homeCard">
                <div class="card-body">
                    <a class="homepage-h1" href="/products/index/@product.ID">@product.Name</a>
                    <a href="/products/index/@product.ID"><img class="img-fluid" src="@Url.Content(product.ImageURL)" /></a>
                    <p>@product.Description</p>
                    <p>@product.Price</p>
                    <form method="post" asp-action="index">
                        <input type="hidden" name="id" value="@product.ID" />
                        <label for="quantity">How many would you like?</label>
                        <select name="quantity" class="form-control">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        <input type="submit" class="btn btn-primary" value="Add To Cart" />
                    </form>

                </div>
            </div>
        }
    </div>
    <div class="col-sm">
        <h2><a href="/products/VideoCards">Video Cards</a></h2>
        @foreach (var product in Model.Where(x => x.Category == "MOTHERBOARD" && x.CompatibilityType == "S"))
