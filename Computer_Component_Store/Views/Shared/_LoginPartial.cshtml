@using Microsoft.AspNetCore.Identity
@using Computer_Component_Store.Data;

@inject SignInManager<ComputerUser> SignInManager
@inject UserManager<ComputerUser> UserManager
@{ 
    var computerUser = await UserManager.GetUserAsync(User);
}

<ul class="nav navbar-nav navbar-right">
    <li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @computerUser.FirstName @computerUser.LastName!</a>
        </li>
        <li>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </form>
        </li>
    }
    else
    {

        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    }

</ul>
